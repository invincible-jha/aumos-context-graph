# aumos-context-graph — Environment Variables
# Copy to .env and fill in values before running locally

# ── Standard AumOS Settings ──────────────────────────────────────────────────
AUMOS_DATABASE_URL=postgresql+asyncpg://aumos:aumos_dev@localhost/aumos
AUMOS_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
AUMOS_REDIS_URL=redis://localhost:6379/0
AUMOS_KEYCLOAK_URL=http://localhost:8080
AUMOS_KEYCLOAK_REALM=aumos
AUMOS_KEYCLOAK_CLIENT_ID=context-graph
AUMOS_ENVIRONMENT=development
AUMOS_LOG_LEVEL=INFO
AUMOS_SENTRY_DSN=

# ── Context Graph Specific Settings ──────────────────────────────────────────
# Graph backend: 'age' (Apache AGE on PostgreSQL) or 'neo4j'
AUMOS_CONTEXT_GRAPH_BACKEND=age

# Neo4j connection (only required if GRAPH_BACKEND=neo4j)
AUMOS_CONTEXT_NEO4J_URL=bolt://localhost:7687
AUMOS_CONTEXT_NEO4J_USER=neo4j
AUMOS_CONTEXT_NEO4J_PASSWORD=password

# Vector backend: 'pgvector' (default) or 'milvus'
AUMOS_CONTEXT_VECTOR_BACKEND=pgvector

# Milvus connection (only required if VECTOR_BACKEND=milvus)
AUMOS_CONTEXT_MILVUS_HOST=localhost
AUMOS_CONTEXT_MILVUS_PORT=19530

# Embedding model configuration
AUMOS_CONTEXT_EMBEDDING_MODEL=text-embedding-3-small
AUMOS_CONTEXT_EMBEDDING_DIMENSIONS=1536
AUMOS_CONTEXT_EMBEDDING_BATCH_SIZE=100
OPENAI_API_KEY=sk-...

# LLM for RAG generation
AUMOS_CONTEXT_LLM_MODEL=claude-sonnet-4-6
AUMOS_CONTEXT_RAG_MAX_TOKENS=2048
AUMOS_CONTEXT_RAG_TOP_K=5

# Document processing
AUMOS_CONTEXT_CHUNK_SIZE=512
AUMOS_CONTEXT_CHUNK_OVERLAP=50
AUMOS_CONTEXT_MAX_DOCUMENT_SIZE_MB=50

# Search configuration
AUMOS_CONTEXT_SEARCH_DEFAULT_LIMIT=10
AUMOS_CONTEXT_SEARCH_MAX_LIMIT=100
AUMOS_CONTEXT_SEMANTIC_SIMILARITY_THRESHOLD=0.7
